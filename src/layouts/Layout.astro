---
import { ViewTransitions } from "astro:transitions";
import Nav from "@/components/nav.astro";
import ScreenSize from "@/components/screen-size.astro";

import "../styles/globals.css";

interface Props {
  title: string;
  description: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <ViewTransitions fallback="swap" />
  </head>
  <body class="min-h-screen font-sans antialiased">
    <div id="app" class="flex h-dvh flex-col">
      <Nav class="border-b border-muted-foreground" />
      <main
        class="flex isolate grow flex-col gap-y-6 self-center py-6 lg:max-w-6xl lg:gap-y-12 min-w-full"
      >
        <slot />
        <ScreenSize/>
      </main>
    </div>
  </body>
</html>

